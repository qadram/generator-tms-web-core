{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.3.0",
  "compounds": [
    {
      "name": "Run",
      "preLaunchTask": "Build",
      "configurations": ["Miletus: main", "Miletus: renderer"]
    },
    {
      "name": "Run Without Debugging",
      "preLaunchTask": "Build",
      "configurations": ["Miletus: main"]
    }
  ],
  "configurations": [
    {
      "name": "Miletus: main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${command:miletus.getpath}",
      "runtimeArgs": [
        "--remote-debugging-port=${config:TMS.options.miletus.debug.port}",
        "${command:rad4.tms.getexpandedoutputpath}"
      ],
      "presentation": {
        "hidden": true
      },
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/.vscode/launch.bat",
        "runtimeArgs": [
          "${command:miletus.getpath}",
          "${config:TMS.options.miletus.debug.port}",
          "${command:rad4.tms.getexpandedoutputpath}"
        ]
      },
      "outputCapture": "std"
    },
    {
      "name": "Miletus: renderer",
      "preLaunchTask": "Sleepdelay",
      "presentation": {
        "hidden": true
      },
      "type": "chrome",
      "request": "attach",
      "port": "${config:TMS.options.miletus.debug.port}",
      "webRoot": "${command:rad4.tms.getexpandedoutputpath}",
      "timeout": "${config:TMS.options.miletus.debug.timeout}"
    }
  ]
}